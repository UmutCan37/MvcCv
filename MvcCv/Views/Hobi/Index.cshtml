﻿@using MvcCv.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama 1</label>
<textarea rows="5" class="form-control" name="Acıklama1">@item.Acıklama1</textarea>
        <label>Açıklama 2</label>
<textarea rows="5" class="form-control" name="Acıklama2">@item.Acıklama2</textarea>
    }
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>